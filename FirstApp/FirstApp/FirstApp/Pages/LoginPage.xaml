<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Pages.LoginPage"
             Title="Авторизация">
    <ContentPage.Content>
        <StackLayout Padding="12">
            <Editor Placeholder="Введите логин" x:Name="TxtLogin"/>
            <Editor Placeholder="Введите пароль" x:Name="TxtPassword"/>
            <Button HorizontalOptions="EndAndExpand" Text="Sign up" Background="GReen" x:Name="BtnSignUp" Clicked="BtnSignUp_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>