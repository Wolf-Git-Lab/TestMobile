<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Pages.EditPage"
             Title="Редактирование данных">
    <ContentPage.Content>
        <StackLayout Padding="12">
            <Editor Placeholder="Введите логин" x:Name="TxtLogin"/>
            <Editor Placeholder="Введите пароль" x:Name="TxtPassword"/>
            <Button Text="Созранить" x:Name="BtnSave" Clicked="BtnSave_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>